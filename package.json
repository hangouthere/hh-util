{
  "name": "@nfg/util",
  "description": "Utility Library for NFG products",
  "version": "0.0.2-8",
  "license": "MIT",
  "author": "CodexHere <codexhere@outlook.com>",
  "main": "./dist/index.js",
  "type": "module",
  "bin": {
    "nfg-builder": "./.scripts/builder.mts"
  },
  "scripts": {
    "postinstall": "npm run _trigger",
    "_trigger": "echo `date` > .trigger_nfg_util",
    "clean": "rimraf ./dist",
    "predev": "npm i && npm run clean",
    "preprod": "NODE_ENV=development npm i && npm run clean",
    "build:lint": "eslint .",
    "build:types": "tsc --emitDeclarationOnly --declaration",
    "dev": "NODE_ENV=development concurrently npm:dev:*",
    "dev:types": "nodemon -e ts,js,mjs,mts --watch ./src --exec \"npm run build:lint && npm run build:types\"",
    "dev:bundle": "EXTERNALS=\"./node_modules*\" FORCEBUILDONLY=1 RUNTIMEPLATFORM=node FILESRC=index.ts nodemon -e ts,js,mjs,mts --watch ./src --exec \".scripts/builder.mts\"",
    "test": "vitest --coverage",
    "test:debug": "node --inspect-brk=0.0.0.0:9229 ./node_modules/vitest/vitest.mjs --threads false",
    "prod": "npm run build:types && NODE_ENV=production npm run prod:bundle",
    "prod:bundle": "EXTERNALS=\"./node_modules*\" RUNTIMEPLATFORM=node FORCEBUILDONLY=1 FILESRC=index.ts .scripts/builder.mts",
    "prod:publish": "npm run prod && npm run publish:registry",
    "publish:registry": "npm version prerelease && npm publish && npm run _trigger"
  },
  "dependencies": {
    "c8": "^7.13.0",
    "debug": "^4.3.4",
    "electron": "^23.1.4",
    "lodash.get": "^4.4.2",
    "lodash.set": "^4.3.2"
  },
  "devDependencies": {
    "@types/lodash.get": "^4.4.7",
    "@types/lodash.set": "^4.3.7"
  },
  "peerDependencies": {
    "@chialab/esbuild-plugin-env": "^0.17.1",
    "@chialab/esbuild-plugin-html": "^0.17.2",
    "@types/debug": "^4.1.7",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "chalk": "^5.2.0",
    "concurrently": "^7.6.0",
    "esbuild-copy-static-files": "^0.1.0",
    "esbuild-plugin-sass": "^1.0.1",
    "esbuild": "^0.17.11",
    "eslint": "^8.36.0",
    "nodemon": "^2.0.21",
    "rimraf": "^4.4.0",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.5",
    "typescript": "^5.0.2",
    "vitest": "^0.29.3"
  },
  "______________________________": "------------------------------",
  "keywords": [
    "nerdfoundry",
    "nerdfoundrygaming",
    "nfg",
    "nfgutil",
    "nfg-util",
    "typescript",
    "tsconfig",
    "utility"
  ],
  "publishConfig": {
    "access": "public",
    "scope": "@nfg"
  },
  "exports": {
    "./tsconfig": "./tsconfig.json",
    "./prettier": "./.prettierrc.cjs",
    "./*": "./dist/*"
  }
}
