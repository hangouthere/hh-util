{
  "name": "nfg-util",
  "description": "Utility Library for NFG products",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Codex <nfg.codex@outlook.com>",
  "main": "./dist/index.js",
  "type": "module",
  "keywords": [
    "nerdfoundry",
    "nerdfoundrygaming",
    "nfg",
    "nfgutil",
    "nfg-util",
    "typescript",
    "tsconfig",
    "utility"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./*": "./dist/*"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*"
      ]
    }
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "predev": "npm i; npm run clean",
    "prebuild": "npm i; npm run clean",
    "dev": "concurrently -r 'npm:dev:*'",
    "build": "concurrently -r 'npm:build:*'",
    "build:bundle": "EXTERNALS=\"./node_modules*\" FORCEBUILDONLY=1 RUNTIMEPLATFORM=node FILESRC=index.ts ts-node .scripts/build.mts",
    "build:types": "tsc --emitDeclarationOnly --declaration"
  },
  "devDependencies": {
    "@chialab/esbuild-plugin-env": "^0.16.0",
    "@chialab/esbuild-plugin-html": "^0.16.2",
    "@types/node": "^18.6.1",
    "concurrently": "^7.3.0",
    "esbuild": "^0.14.50",
    "esbuild-copy-static-files": "^0.1.0",
    "esbuild-plugin-sass": "^1.0.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0"
  }
}
