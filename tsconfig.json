{
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist", "__mocks__/**/*"],

  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "types": ["vitest/globals"]
  }
}
