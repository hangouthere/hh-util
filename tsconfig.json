{
  "ts-node": {
    "esm": true,
    "files": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],

  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "preserve",
    "isolatedModules": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "preserveValueImports": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  }
}
